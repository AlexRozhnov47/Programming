        <Label x:Name="STLabel" Content="0.00 (Стандарт)" HorizontalAlignment="Left" Margin="12,41,0,0" VerticalAlignment="Top" Width="479" Height="28" IsEnabled="False"/>
        <Label x:Name="NewtonLabel" Content="0.00 (По Ньютону)" HorizontalAlignment="Left" Margin="12,75,0,0" VerticalAlignment="Top" Width="240"/>
        <Label x:Name="Itr" Content="0" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
